{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MathViz",
  "scopeName": "source.mviz",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#decorators" },
    { "include": "#declarations" },
    { "include": "#control-flow" },
    { "include": "#exceptions" },
    { "include": "#async" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#lambda-params" },
    { "include": "#constants" },
    { "include": "#unicode-operators" },
    { "include": "#unicode-constants" },
    { "include": "#support-types" },
    { "include": "#manim-classes" },
    { "include": "#manim-functions" },
    { "include": "#manim-constants" },
    { "include": "#builtin-functions" },
    { "include": "#function-calls" },
    { "include": "#numbers" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.mathviz",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.mathviz",
          "match": "//.*$"
        },
        {
          "name": "comment.line.hash.mathviz",
          "match": "#.*$"
        },
        {
          "name": "comment.block.mathviz",
          "begin": "/\\*",
          "end": "\\*/",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.comment.begin.mathviz" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.comment.end.mathviz" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mathviz",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.mathviz" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.mathviz" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.mathviz",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.mathviz",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.interpolation.begin.mathviz" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.interpolation.end.mathviz" }
              },
              "patterns": [
                { "include": "source.mviz" }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.single.mathviz",
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.mathviz" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.mathviz" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.mathviz",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "decorators": {
      "patterns": [
        {
          "name": "entity.name.function.decorator.mathviz",
          "match": "@\\w+"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.mathviz" },
            "2": { "name": "entity.name.function.definition.mathviz" }
          }
        },
        {
          "match": "\\b(scene)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.mathviz" },
            "2": { "name": "entity.name.type.scene.mathviz" }
          }
        },
        {
          "match": "\\b(class|struct|trait|enum)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.mathviz" },
            "2": { "name": "entity.name.type.class.mathviz" }
          }
        },
        {
          "match": "\\b(impl)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.mathviz" },
            "2": { "name": "entity.name.type.class.mathviz" }
          }
        },
        {
          "match": "\\b(mod)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.mathviz" },
            "2": { "name": "entity.name.namespace.mathviz" }
          }
        },
        {
          "name": "keyword.declaration.mathviz",
          "match": "\\b(let|mut|const)\\b"
        }
      ]
    },
    "control-flow": {
      "patterns": [
        {
          "name": "keyword.control.mathviz",
          "match": "\\b(if|else|elif|for|while|break|continue|return|match|loop|pass)\\b"
        }
      ]
    },
    "exceptions": {
      "patterns": [
        {
          "name": "keyword.control.exception.mathviz",
          "match": "\\b(try|catch|throw)\\b"
        }
      ]
    },
    "async": {
      "patterns": [
        {
          "name": "keyword.other.async.mathviz",
          "match": "\\b(async|await)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.other.mathviz",
          "match": "\\b(use|pub|import|from|as|in|self)\\b"
        },
        {
          "name": "keyword.operator.logical.mathviz",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.mathviz",
          "match": "->"
        },
        {
          "name": "keyword.operator.fat-arrow.mathviz",
          "match": "=>"
        },
        {
          "name": "keyword.operator.range-inclusive.mathviz",
          "match": "\\.\\.="
        },
        {
          "name": "keyword.operator.range.mathviz",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.namespace.mathviz",
          "match": "::"
        },
        {
          "name": "keyword.operator.pipe.mathviz",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.comparison.mathviz",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.compound.mathviz",
          "match": "\\+=|-=|\\*=|/=|%="
        },
        {
          "name": "keyword.operator.assignment.mathviz",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.mathviz",
          "match": "\\+|-|\\*|/|%|\\^"
        }
      ]
    },
    "lambda-params": {
      "patterns": [
        {
          "name": "meta.lambda.parameters.mathviz",
          "begin": "(?<=\\s|^|\\(|,)\\|",
          "end": "\\|",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.parameters.begin.mathviz" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.parameters.end.mathviz" }
          },
          "patterns": [
            {
              "name": "variable.parameter.lambda.mathviz",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            },
            {
              "name": "punctuation.separator.parameter.mathviz",
              "match": ","
            }
          ]
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.mathviz",
          "match": "\\b(true|false|None)\\b"
        },
        {
          "name": "constant.language.math.mathviz",
          "match": "\\b(PI|E|TAU|PHI|INF)\\b"
        }
      ]
    },
    "unicode-operators": {
      "patterns": [
        {
          "name": "keyword.operator.unicode.mathviz",
          "match": "[∈∉⊆⊇⊂⊃∪∩∖]"
        }
      ]
    },
    "unicode-constants": {
      "patterns": [
        {
          "name": "constant.other.unicode.mathviz",
          "match": "[π∞∅]"
        }
      ]
    },
    "support-types": {
      "patterns": [
        {
          "name": "support.type.mathviz",
          "match": "\\b(Int|Float|Bool|String|List|Set|Dict|Tuple|Vec|Mat|Array|Matrix|Optional|Result)\\b"
        }
      ]
    },
    "manim-classes": {
      "patterns": [
        {
          "name": "support.class.manim.mathviz",
          "match": "\\b(Circle|Square|Rectangle|Triangle|Line|Arrow|Text|MathTex|Tex|Axes|NumberPlane|VGroup|Scene|Mobject|Matrix)\\b"
        }
      ]
    },
    "manim-functions": {
      "patterns": [
        {
          "name": "support.function.manim.mathviz",
          "match": "\\b(Create|FadeIn|FadeOut|Write|Transform|ReplacementTransform|FadeTransform|AnimationGroup|LaggedStart|Succession)\\b"
        }
      ]
    },
    "manim-constants": {
      "patterns": [
        {
          "name": "support.constant.manim.mathviz",
          "match": "\\b(BLUE|RED|GREEN|YELLOW|WHITE|BLACK|ORANGE|PURPLE|PINK|UP|DOWN|LEFT|RIGHT|ORIGIN|UR|UL|DR|DL)\\b"
        }
      ]
    },
    "builtin-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.mathviz",
          "match": "\\b(print|println|len|range|map|filter|sqrt|sin|cos|tan|exp|log|abs|min|max|sum|mean|matmul|dot|transpose|zeros|ones|linspace|arange|eye)\\b"
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.mathviz" }
          }
        },
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=:)",
          "captures": {
            "1": { "name": "variable.parameter.named.mathviz" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.mathviz",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.float.mathviz",
          "match": "\\b\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.hex.mathviz",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.mathviz",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.mathviz",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.integer.mathviz",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.block.begin.mathviz",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.block.end.mathviz",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.brackets.begin.mathviz",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.mathviz",
          "match": "\\]"
        },
        {
          "name": "punctuation.section.parens.begin.mathviz",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.mathviz",
          "match": "\\)"
        },
        {
          "name": "punctuation.separator.comma.mathviz",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.mathviz",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.dot.mathviz",
          "match": "\\."
        }
      ]
    }
  }
}
