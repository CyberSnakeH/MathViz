{
  "comments": {
    "lineComment": "//",
    "blockComment": [
      "/*",
      "*/"
    ]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "|", "close": "|", "notIn": ["string", "comment"] },
    { "open": "/*", "close": " */", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "|", "close": "|" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\{",
      "end": "^\\s*\\}"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([\\w\\p{L}\\p{N}][\\w\\p{L}\\p{N}_]*)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(fn|scene|class|struct|trait|impl|enum|if|else|elif|for|while|match|loop|try|catch|mod)\\b.*\\{?\\s*$|.*\\{\\s*$",
    "decreaseIndentPattern": "^\\s*\\}"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*///.*$",
      "action": {
        "indent": "none",
        "appendText": "/// "
      }
    },
    {
      "beforeText": "\\{\\s*$",
      "afterText": "^\\s*\\}",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "\\{\\s*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
