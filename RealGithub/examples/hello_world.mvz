# MathViz Hello World Example
# This demonstrates basic syntax and features

# Variable declarations
let message = "Hello, MathViz!"
let pi_approx = 3.14159
let is_awesome = true

# Function definition
fn greet(name: String) -> String {
    return "Hello, " + name + "!"
}

# Mathematical operations
let x = 2 ^ 10  # 1024 (exponentiation)
let y = 15 // 4  # 3 (integer division)
let z = 15 % 4   # 3 (modulo)

# Print results
print(message)
print(greet("World"))
print(x)
